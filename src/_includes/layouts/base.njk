<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>{{ title }}</title>
  <link rel="stylesheet" href="/assets/css/main.css">
  <link rel="icon" href="/assets/images/oversightlogofav.svg" type="image/svg+xml">
  <link rel="icon" href="/assets/images/oversightlogofav.svg" sizes="32x32">
</head>
<body
  class="gate-pending{% if layout_columns == 2 %} columns-2{% endif %}"
  data-theme="{{ theme | default('default') }}"
  data-required-clearance="{{ clearance_required | default(0) }}"
>

<header class="site-header">
  <button class="site-logo" type="button" data-theme-toggle>
    <img
      src="/assets/images/oversightlogoheader.svg"
      alt=""
      data-theme-logo
      data-logo-light="/assets/images/oversightlogoheader.svg"
      data-logo-dark="/assets/images/oversightlogoheaderdark.svg"
    />
  </button>
  <div class="site-header-content">
    <h1 class="site-title">
      <a href="/">OVERSIGHT ARCHIVE</a>
    </h1>

  <div class="header-meta">
    <p class="classification" data-archive-session>
      SESSION: NONE
    </p>
    <p class="classification">
      REQUIRED CLEARANCE LEVEL {{ clearance_required | default("UNSPECIFIED") }}
    </p>

    <button
      class="classification classification-action site-menu-toggle"
      type="button"
      data-sidebar-toggle
      aria-controls="site-sidebar"
      aria-expanded="false"
    >
      MENU
    </button>

<button
  class="classification classification-action"
  type="button"
  data-archive-auth-toggle
>
  LOG IN
</button>

  </div>
  </div>
</header>

<div class="shell">
  <aside class="sidebar" id="site-sidebar">
    {% include "components/nav.njk" %}
  </aside>

  <main class="page">
    <article class="prose">
      {{ content | safe }}
    </article>
  </main>
</div>

<div class="sidebar-scrim" data-sidebar-scrim></div>

<footer class="site-footer">
  <p>Document ID: {{ document_id }}</p>
</footer>

<script src="/assets/js/auth-config.js"></script>
<script src="/assets/js/auth.js"></script>
<script src="/assets/js/theme.js"></script>
<script src="/assets/js/redact.js"></script>
<script src="/assets/js/gate.js"></script>
<script src="/assets/js/sidebar.js"></script>

</body>
</html>
