<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ title }}</title>
  <link rel="stylesheet" href="/assets/css/main.css">
  <link rel="icon" href="/assets/images/oversightlogofav.svg" type="image/svg+xml">
  <link rel="icon" href="/assets/images/oversightlogofav.svg" sizes="32x32">
</head>
<body
  class="gate-pending"
  data-theme="{{ theme | default('default') }}"
  data-required-clearance="{{ clearance_required | default(0) }}"
  {% if pagefind_ignore %}data-pagefind-ignore="all"{% endif %}
>

<header class="site-header" data-pagefind-ignore="all">
  <button class="site-logo" type="button" data-theme-toggle>
    <img
      src="/assets/images/oversightlogoheader.svg"
      alt=""
      data-theme-logo
      data-logo-light="/assets/images/oversightlogoheader.svg"
      data-logo-dark="/assets/images/oversightlogoheaderdark.svg"
    />
  </button>
  <div class="site-header-content">
    <h1 class="site-title">
      <a href="/">OVERSIGHT ARCHIVE</a>
    </h1>
    <div class="header-meta">
      <p class="classification classification-session" data-archive-session>
        SESSION: NONE
      </p>
      <p class="classification classification-required">
        REQUIRED CLEARANCE LEVEL {{ clearance_required | default("UNSPECIFIED") }}
      </p>

      <div class="header-actions">
        <button class="classification classification-action dir-toggle" type="button" data-dir-toggle aria-expanded="false">
          DIR
        </button>
        <a class="classification classification-action classification-action-search" href="/search/">
          SEARCH
        </a>
        <button
          class="classification classification-action classification-action-auth"
          type="button"
          data-archive-auth-toggle
        >
          LOG IN
        </button>
        <button
          class="classification classification-action classification-action-clearance"
          type="button"
          data-archive-clearance
        >
          CL NONE
        </button>
      </div>

    </div>
  </div>
</header>

<div class="shell">
  <aside class="sidebar">
    {% include "components/nav.njk" %}
  </aside>

  <main class="page">
    {% set required_clearance_value = clearance_required | default(0) | int %}
    <article
      class="prose"
      data-pagefind-meta="clearance: {{ required_clearance_value }}"
    >
      {{ content | safe }}
    </article>
  </main>
</div>


<footer class="site-footer" data-pagefind-ignore="all">
  <p>Document ID: {{ document_id }}</p>
</footer>

<script src="/assets/js/auth-config.js"></script>
<script src="/assets/js/auth.js"></script>
<script src="/assets/js/theme.js"></script>
<script src="/assets/js/nav.js"></script>
<script src="/assets/js/redact.js"></script>
<script src="/assets/js/gate.js"></script>

</body>
</html>
