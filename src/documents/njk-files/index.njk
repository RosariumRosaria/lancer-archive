<div class="card">
  {% sectionHeader "Archive Hubs" %}
  Primary indices for each collection.
  {% endsectionHeader %}
  <ul>
    {% set hubDocs = [] %}
    {% for doc in collections.documents | sort(attribute="url") %}
      {% if doc.data.tags and "hub" in doc.data.tags %}
        {% set hubDocs = hubDocs.concat([doc]) %}
        <li>
          <a href="{{ doc.url }}">{{ doc.data.title or doc.url }}</a>
          {% if doc.data.clearance_required %}
            (Clearance: {{ doc.data.clearance_required }})
          {% endif %}
        </li>
      {% endif %}
    {% endfor %}
    {% if hubDocs.length == 0 %}
      <li><em>No hubs are currently listed.</em></li>
    {% endif %}
  </ul>
</div>
